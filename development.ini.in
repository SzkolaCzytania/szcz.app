[app:main]
use = egg:Paste#urlmap
/ = middlewares

[pipeline:middlewares]
pipeline = thumbs szcz

[filter:thumbs]
use = egg:repoze.bitblt#bitblt
secret = fasfsaf
try_xhtml = True

[app:szcz]
use = egg:szcz

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.debug_templates = true
pyramid.default_locale_name = en
pyramid.includes = pyramid_debugtoolbar pyramid_tm
sqlalchemy.url = postgresql://postgres:postgres@localhost/szcz
mail.host = localhost
mail.port = 8025


session.type = file
session.data_dir = %(here)s/data/sessions/data
session.lock_dir = %(here)s/data/sessions/lock
session.key = szcz
session.secret = ${conf:session_secret}
session.cookie_on_exception = true

fanstatic.bottom = true
fanstatic.debug = true

velruse.store = velruse.store.sqlstore.SQLStore
velruse.store.url = postgresql://postgres:postgres@localhost/szcz
velruse.openid.store = openid.store.memstore.MemoryStore
velruse.openid.realm = ${conf:domain}
velruse.facebook.app_id = ${conf:facebook_app_id}
velruse.facebook.app_secret = ${conf:facebook_app_secret}
velruse.twitter.consumer_key = ${conf:twitter_consumer_key}
velruse.twitter.consumer_secret = ${conf:twitter_consumer_secret}

[server:main]
use = egg:waitress#main
host = 0.0.0.0
port = 6543

# Begin logging configuration

[loggers]
keys = root, szcz, sqlalchemy

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_szcz]
level = DEBUG
handlers =
qualname = szcz

[logger_sqlalchemy]
level = INFO
handlers =
qualname = sqlalchemy.engine
# "level = INFO" logs SQL queries.
# "level = DEBUG" logs SQL queries and results.
# "level = WARN" logs neither.  (Recommended for production systems.)

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
