<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="main.macros['main']">
       <metal:container fill-slot="container">

    <h2> Lista dostępnych książek </h2>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>#</th>
            <th class="yellow">Tytuł</th>
            <th class="blue">Autor</th>
            <th class="green">ISBN</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="book books">
            <td tal:content="repeat.book.number"></td>
            <td><a href="/book/${book.content_id}">${book.title}</a></td>
            <td>${book.publisher}</td>
            <td>${book.isbn}</td>
          </tr>
        </tbody>
      </table>

</metal:container>
</html>    
