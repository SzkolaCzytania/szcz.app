<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="main.macros['main']">

  <metal:container fill-slot="well">
    <h2> Moje grupy </h2>

    <table id="data_table" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="yellow">Nazwa grupy</th>
            <th class="green">Książki</th>
            <th class="blue">Rola</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="group groups">
            <td><a href="/group/${group.group_id}">
                ${group.group.name}
            </a></td>
            <td>
                <tal:books repeat="book group.group.books">
                  <a href="/book/${book.content_id}">${book.title}</a><tal:not_last condition="not repeat.book.end">,</tal:not_last>
                </tal:books>
            </td>
            <td>${group.membership}</td>
          </tr>
        </tbody>
      </table>

  </metal:container>
</html>
