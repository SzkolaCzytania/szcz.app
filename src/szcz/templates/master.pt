<metal:main define-macro="main">
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
  <head>
    <meta charset="utf-8">
    <title>Szkoła czytania</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div id="body-wrapper">
      <!-- navbar -->
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/"><img src="/fanstatic/szcz/img/logo_mini.png"></a>
            <div class="nav-collapse" tal:condition="request.user">
              <ul class="nav pull-right">
                <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-user icon-white"></i>
                  ${request.user.fullname}<b class="caret"></b>
                </a>
                  <ul class="dropdown-menu">
                    <li><a href="${request.application_url}/profile">
                      <i class="icon-lock"></i>
                        Profil
                    </a></li>
                    <li><a href="${request.application_url}/logout">
                      <i class="icon-off"></i>
                      Wyloguj się
                    </a></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- end navbar -->
      <div id="visual-portal-wrapper">
        <div class="container-fluid" id="container-wrap">

          <div class="row-fluid">
            <div class="span3" tal:condition="request.user">
              <div class="well sidebar-nav">
                <ul class="nav nav-list">
                  <li class="nav-header">
                    <i class="icon-home"></i>
                    Grupy
                  </li>
                  <li><a href="#">Dodaj nową grupę</a></li>
                  <li><a href="#">Moje grupy</a></li>
                  <li><a href="#">Szukaj grupy</a></li>
                </ul>
                <ul class="nav nav-list">
                  <li class="nav-header">
                    <i class="icon-book"></i>
                    Książki
                  </li>
                  <li><a href="#">Książki które czytam</a></li>
                  <li><a href="/books">Wszystkie książki</a></li>
                </ul>
              </div>
            </div>
            <div class="span9" tal:condition="request.user">
              <tal:flash repeat="msg request.session.pop_flash(queue='success')">
                <div class="alert alert-block alert-success fade in">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    <h4 class="alert-heading">${msg['title']}</h4>
                    <p>${msg['body']}</p>
                  </div>
              </tal:flash>
              <tal:flash repeat="msg request.session.pop_flash(queue='error')">
                <div class="alert alert-block alert-error fade in">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    <h4 class="alert-heading">${msg['title']}</h4>
                    <p>${msg['body']}</p>
                  </div>
              </tal:flash>
              <div class="well">
                <metal:container define-slot="container" />
              </div>
            </div>
            <div class="span12" tal:condition="not request.user">
              <metal:container define-slot="container"/>
            </div>
          </div>
        </div> <!-- /container -->
      </div>
      <div class="push"></div>
    </div>
    <div id="footer">
        <div class="borderFooter"><hr></div>
        <div class="container-fluid">
          <div class="row-fluid">
            <div class="span4">&nbsp;</div>
            <div class="copyright span4">
              © 2011 - All rights reserved
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
</metal:main>
