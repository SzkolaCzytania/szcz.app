<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal"
       metal:use-macro="main.macros['main']">

       <metal:container fill-slot="container">

      <div class="well">
          <ul class="nav nav-pills">
              <li class="active"> <a href="#">Książka</a></li>
              <li><a href="#">Grupy czytające książkę</a></li>
              <li><a href="#">Dodatki</a></li>
              <li tal:condition="request.user.groups" class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      Dodaj książkę do gurpy
                      <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                      <tal:states repeat="group request.user.groups">
                          <li><a href="/groups/${group.group.id}/add_book?book_id=${book.content_id}">${group.group.name}</a></li>
                      </tal:states>
                  </ul>
              </li>
          </ul>

          <div class="row-fluid">
            <div class="span2">
                <img src="http://www.szkolaczytania.org.pl${book.path}/leadImage_preview" class="thumbnail pull-left">
            </div>
          <div class="span10">
          <h2>${book.title}</h2>
              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td>Tytuł:</td>
                    <td>${book.title}</td>
                  </tr>
                  <tr>
                    <td>Opis:</td>
                    <td>${book.description}</td>
                  </tr>
                  <tr>
                    <td>Wydawca:</td>
                    <td>${book.publisher}</td>
                  </tr>
                  <tr>
                    <td>ISBN:</td>
                    <td>${book.isbn}</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
      </div>

</metal:container>
</html>    
